<UserControl x:Class="GitClientVS.UI.Controls.DiffControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:styles="clr-namespace:GitClientVS.UI.Styles"
             xmlns:diffControlUtils="clr-namespace:GitClientVS.UI.Controls.DiffControlUtils"
             xmlns:parseDiff="clr-namespace:ParseDiff;assembly=ParseDiff"
             xmlns:tree="clr-namespace:GitClientVS.Contracts.Models.Tree;assembly=GitClientVS.Contracts"
             xmlns:controls="clr-namespace:GitClientVS.UI.Controls"
             xmlns:viewModels="clr-namespace:GitClientVS.Infrastructure.ViewModels;assembly=GitClientVS.Infrastructure"
             xmlns:bindings="clr-namespace:GitClientVS.UI.Bindings"
             xmlns:gitClientModels="clr-namespace:GitClientVS.Contracts.Models.GitClientModels;assembly=GitClientVS.Contracts"
             xmlns:converters="clr-namespace:GitClientVS.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="CurrentControl"
             d:DataContext="{d:DesignInstance viewModels:DiffWindowControlViewModel,IsDesignTimeCreatable=False}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <styles:SharedResourceDictionary Source="pack://application:,,,/GitClientVS.UI;component/Styles/SharedDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>

            <DataTemplate DataType="{x:Type tree:CommentTree}">
                <Border Margin="5" BorderThickness="0.2" BorderBrush="Black" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <controls:CommentsTreeView 
                        SingleCommentTree="{Binding}"
                        DeleteCommand="{Binding ElementName=CurrentControl,Path= DataContext.CommentViewModel.DeleteCommentCommand}"
                        ReplyCommand="{Binding ElementName=CurrentControl,Path= DataContext.CommentViewModel.ReplyCommentCommand}"
                        EditCommand="{Binding ElementName=CurrentControl,Path= DataContext.CommentViewModel.EditCommentCommand}"
                        />
                    </Grid>

                </Border>
            </DataTemplate>


            <DataTemplate DataType="{x:Type parseDiff:ChunkDiff}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <avalonedit:TextEditor x:Name="TextEditorControl" 
                                           diffControlUtils:AvalonEditBehaviour.TextBinding="{Binding Text}" 
                                           diffControlUtils:AvalonEditBehaviour.IsDiffEditor="True"
                                           diffControlUtils:AvalonEditBehaviour.FileDiff="{Binding ElementName=CurrentControl,Path=DataContext.FileDiff}"
                                           diffControlUtils:AvalonEditBehaviour.Theme="{Binding ElementName=CurrentControl,Path=DataContext.CurrentTheme}"
                                           HorizontalAlignment="Stretch"
                                           VerticalScrollBarVisibility="Hidden"
                                           HorizontalScrollBarVisibility="Hidden"
                                           FontFamily="Consolas"
                                           FontSize="10pt" 
                                           IsReadOnly="True"
                                           Foreground="{Binding ElementName=Tb,Path=Foreground}"
                                        >
                    </avalonedit:TextEditor>

                    <Separator Margin="0,10" Grid.Row="1"/>
                </Grid>

            </DataTemplate>
        </Grid.Resources>


        <TextBlock Visibility="Collapsed" x:Name="Tb"/>
        <!--TODO A HACK TO USE TB FOREGROUND-->

        <controls:AddCommentView Grid.Row="0" 
                              AddCommand="{Binding CommentViewModel.AddCommentCommand}"
                              CurrentText="{bindings:ValidatedBinding CommentViewModel.AddCommentText, Mode=TwoWay}"
                                 Inline="{Binding FileLevelInline}"
                                 >

        </controls:AddCommentView>

        <ScrollViewer Grid.Row="1" PreviewMouseWheel="UIElement_OnPreviewMouseWheel">
            <ItemsControl ItemsSource="{Binding DisplayedModels}">
                <ItemsControl.Resources>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ItemsControl.Resources>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
